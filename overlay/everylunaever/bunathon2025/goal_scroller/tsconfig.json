{
    "compilerOptions": {
        "jsx": "react",
        "lib": [ "es2022", "DOM" ],
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "es2022",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "declarationDir": "types",
        "declaration": true
    },
    "include": [ "**/*.js", "**/*.d.ts", "**/*.d.ts" ],
    "exclude": [ "node_modules" ]
}
